<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All improvement plans
    </h1>

    <a href="/improvement_plans/new" class="btn btn-block btn-outline-secondary">
      Add a new improvement plan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "improvement_plan_templates/improvement_plans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          State
        </th>

        <th>
          User
        </th>

        <th>
          Comments
        </th>

        <th>
          Coach
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @improvement_plans.each do |improvement_plan| %>
      <tr>
        <td>
          <%= improvement_plan.id %>
        </td>

        <td>
          <%= improvement_plan.state %>
        </td>

        <td>
          <% if improvement_plan.user.present? %>
            <a href="/users/<%= improvement_plan.user.id %>">
              <%= improvement_plan.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= improvement_plan.comments %>
        </td>

        <td>
          <%= improvement_plan.coach_id %>
        </td>

        <td>
          <%= time_ago_in_words(improvement_plan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(improvement_plan.updated_at) %> ago
        </td>

        <td>
          <a href="/improvement_plans/<%= improvement_plan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @improvement_plans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
