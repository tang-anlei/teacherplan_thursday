<form action="/create_coach_assignment_from_improvement_plan" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @coach_assignment.user_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="improvement_id" value="<%= @improvement_plan.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create coach assignment
  </button>
</form>
