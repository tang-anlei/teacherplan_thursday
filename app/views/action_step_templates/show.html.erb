<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Action step #<%= @action_step.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/action_steps" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link action_step start -->
      <div class="col">
        <a href="/action_steps/<%= @action_step.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit action step
        </a>
      </div>
      <!-- Edit link action_step end -->

      <!-- Delete link action_step start -->
      <div class="col">
        <a href="/delete_action_step/<%= @action_step.id %>" class="btn btn-block btn-outline-secondary">
          Delete action step
        </a>
      </div>
      <!-- Delete link action_step end -->
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @action_step.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Target date
      </dt>
      <!-- Display target_date start -->
      <dd>
        <%= @action_step.target_date %>
      </dd>
      <!-- Display target_date end -->

      <dt>
        Resources needed
      </dt>
      <!-- Display resources_needed start -->
      <dd>
        <%= @action_step.resources_needed %>
      </dd>
      <!-- Display resources_needed end -->

      <dt>
        Implementation specifics
      </dt>
      <!-- Display implementation_specifics start -->
      <dd>
        <%= @action_step.implementation_specifics %>
      </dd>
      <!-- Display implementation_specifics end -->

      <dt>
        Measures of success
      </dt>
      <!-- Display measures_of_success start -->
      <dd>
        <%= @action_step.measures_of_success %>
      </dd>
      <!-- Display measures_of_success end -->

      <dt>
        Lead
      </dt>
      <!-- Display lead start -->
      <dd>
        <%= @action_step.lead %>
      </dd>
      <!-- Display lead end -->

      <dt>
        Goal
      </dt>
      <!-- Display goal_id start -->
      <dd>
        <% if @action_step.goal.present? %>
          <a href="/goals/<%= @action_step.goal_id %>">
            <%= @action_step.goal.improvement_plan_id %>
          </a>
        <% end %>
      </dd>
      <!-- Display goal_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@action_step.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@action_step.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
