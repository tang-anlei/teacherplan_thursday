<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All action steps
    </h1>

    <a href="/action_steps/new" class="btn btn-block btn-outline-secondary">
      Add a new action step
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "action_step_templates/action_steps_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Target date
        </th>

        <th>
          Resources needed
        </th>

        <th>
          Implementation specifics
        </th>

        <th>
          Measures of success
        </th>

        <th>
          Lead
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @action_steps.each do |action_step| %>
      <tr>
        <td>
          <%= action_step.id %>
        </td>

        <td>
          <%= action_step.description %>
        </td>

        <td>
          <%= action_step.target_date %>
        </td>

        <td>
          <%= action_step.resources_needed %>
        </td>

        <td>
          <%= action_step.implementation_specifics %>
        </td>

        <td>
          <%= action_step.measures_of_success %>
        </td>

        <td>
          <%= action_step.lead %>
        </td>

        <td>
          <% if action_step.goal.present? %>
            <a href="/goals/<%= action_step.goal.id %>">
              <%= action_step.goal.improvement_plan_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(action_step.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(action_step.updated_at) %> ago
        </td>

        <td>
          <a href="/action_steps/<%= action_step.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @action_steps, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
