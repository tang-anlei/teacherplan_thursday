<h1>
  Add a new action step
</h1>


<hr>

<!-- Form action_step start -->
<form action="/create_action_step" method="post">
<!-- Form action_step end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for target_date start -->
  <div class="form-group">
    <label for="target_date">
      Target date
    </label>

    <!-- Input for target_date start -->
    <input type="text" id="target_date" name="target_date" class="form-control">
    <!-- Input for target_date end -->
  </div>
  <!-- Label and input for target_date end -->

  <!-- Label and input for resources_needed start -->
  <div class="form-group">
    <label for="resources_needed">
      Resources needed
    </label>

    <!-- Input for resources_needed start -->
    <textarea id="resources_needed" name="resources_needed" class="form-control" rows="3"></textarea>
    <!-- Input for resources_needed end -->
  </div>
  <!-- Label and input for resources_needed end -->

  <!-- Label and input for implementation_specifics start -->
  <div class="form-group">
    <label for="implementation_specifics">
      Implementation specifics
    </label>

    <!-- Input for implementation_specifics start -->
    <textarea id="implementation_specifics" name="implementation_specifics" class="form-control" rows="3"></textarea>
    <!-- Input for implementation_specifics end -->
  </div>
  <!-- Label and input for implementation_specifics end -->

  <!-- Label and input for measures_of_success start -->
  <div class="form-group">
    <label for="measures_of_success">
      Measures of success
    </label>

    <!-- Input for measures_of_success start -->
    <textarea id="measures_of_success" name="measures_of_success" class="form-control" rows="3"></textarea>
    <!-- Input for measures_of_success end -->
  </div>
  <!-- Label and input for measures_of_success end -->

  <!-- Label and input for lead start -->
  <div class="form-group">
    <label for="lead">
      Lead
    </label>

    <!-- Input for lead start -->
    <textarea id="lead" name="lead" class="form-control" rows="3"></textarea>
    <!-- Input for lead end -->
  </div>
  <!-- Label and input for lead end -->

  <!-- Label and input for goal_id start -->
  <div class="form-group">
    <label for="goal_id">
      Goal
    </label>

    <!-- Input for goal_id start -->
    <%= select_tag(:goal_id, options_from_collection_for_select(Goal.all, :id, :improvement_plan_id, @action_step.goal_id), :class => "form-control") %>
    <!-- Input for goal_id end -->
  </div>
  <!-- Label and input for goal_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create action step
  </button>
</form>

<hr>

<a href="/action_steps">
  Go back
</a>
