<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All goals
    </h1>

    <a href="/goals/new" class="btn btn-block btn-outline-secondary">
      Add a new goal
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "goal_templates/goals_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Improvement plan
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @goals.each do |goal| %>
      <tr>
        <td>
          <%= goal.id %>
        </td>

        <td>
          <% if goal.improvement_plan.present? %>
            <a href="/improvement_plans/<%= goal.improvement_plan.id %>">
              <%= goal.improvement_plan.state %>
            </a>
          <% end %>
        </td>

        <td>
          <%= goal.comments %>
        </td>

        <td>
          <%= time_ago_in_words(goal.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(goal.updated_at) %> ago
        </td>

        <td>
          <a href="/goals/<%= goal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @goals, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
