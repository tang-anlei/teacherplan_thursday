<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Goal #<%= @goal.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/goals" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link goal start -->
      <div class="col">
        <a href="/goals/<%= @goal.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit goal
        </a>
      </div>
      <!-- Edit link goal end -->

      <!-- Delete link goal start -->
      <div class="col">
        <a href="/delete_goal/<%= @goal.id %>" class="btn btn-block btn-outline-secondary">
          Delete goal
        </a>
      </div>
      <!-- Delete link goal end -->
    </div>

    <dl>
      <dt>
        Improvement plan
      </dt>
      <!-- Display improvement_plan_id start -->
      <dd>
        <%= @goal.improvement_plan_id %>
      </dd>
      <!-- Display improvement_plan_id end -->

      <dt>
        Comments
      </dt>
      <!-- Display comments start -->
      <dd>
        <%= @goal.comments %>
      </dd>
      <!-- Display comments end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@goal.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@goal.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
